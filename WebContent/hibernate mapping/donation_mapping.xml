<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="donation" table="DONATION">
        <id name="id" type="java.lang.Integer" column="ID" length="10" />
        
        <property name="idType" type="java.lang.Integer">
            <column name="ID_TYPE" length="10" />
        </property>
        
        <property name="donationType" type="java.lang.Integer">
            <column name="DONATION_TYPE" length="1" />
        </property>
        
        <property name="firstName" type="string">
            <column name="FIRST_NAME" length="255" />
        </property>
        
        <property name="lastName" type="string">
            <column name="LAST_NAME" length="255" />
        </property>
        
        <property name="companyName" type="string">
            <column name="COMPANY_NAME" length="255" />
        </property>
        
        <property name="siren" type="java.lang.Integer">
            <column name="SIREN" length="20" />
        </property>
        
        <property name="mail" type="string">
            <column name="MAIL" length="255" />
        </property>
        
        <property name="password" type="string">
            <column name="PASSWORD" length="255" />
        </property>

		<property name="address" type="string">
            <column name="ADDRESS" length="255" />
        </property>

        <property name="zipCode" type="string">
            <column name="ZIP_CODE" length="255" />
        </property>
        
        <property name="city" type="string">
            <column name="CITY" length="255" />
        </property>
        
        <property name="phone" type="string">
            <column name="PHONE" length="255" />
        </property>
        
        <property name="amount" type="java.lang.Decimal">
            <column name="AMOUNT" length="15" precision="2" />
        </property>
        
        <property name="numberOfChildren" type="java.lang.Integer">
            <column name="NUMBER_OF_CHILDREN" length="10" />
        </property>
        
        <property name="frequency" type="java.lang.Integer">
            <column name="FREQUENCY" length="2" />
        </property>
                
        <property name="attachedFile" type="string">
            <column name="ATTACHED_FILE" length="255" />
        </property>
        
        <property name="donationDate" type="date">
            <column name="DONATION_DATE" />
        </property>
        
        <property name="receipt" type="string">
            <column name="RECEIPT" length="255" />
        </property>
        
        <property name="projectID" type="java.lang.Integer">
            <column name="PROJECT_ID" length="10" />
        </property>
        
        <property name="SubprojectID" type="java.lang.Integer">
            <column name="SUBPROJECT_ID" length="10" />
        </property>
        
        <property name="profileID" type="java.lang.Integer">
            <column name="PROFILE_ID" length="10" />
        </property>
    </class>
</hibernate-mapping>